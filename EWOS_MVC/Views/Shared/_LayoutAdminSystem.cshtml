
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inhouse Fabrication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EWOS_MVC.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- CSS global -->
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            padding: 20px 10px;
            color: white;
        }

            .sidebar h5 {
                font-size: 18px;
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                color: #f8f9fa;
                padding: 12px 15px;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                border-radius: 5px;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: white;
                }

        .btn-logout {
            width: 100%;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: #f8f9fa;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #f1f3f5;
        }

        .footer {
            background: #f8f9fa;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }
    </style>
    <style>
         /* loading efek */
        #globalLoadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.6);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 2000; /* lebih tinggi dari modal */
        }

            #globalLoadingOverlay .spinner-border {
                width: 3rem;
                height: 3rem;
            }
    </style>
</head>
<body>
    <!-- loading efek -->
    <div id="globalLoadingOverlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar"
             style="background-color: #212529">
            <nav>
                <!-- Menambahkan logo -->
                <a href="/">
                    <img src="~/images/EXL-Logo.png" alt="Logo" style="height:50px; margin: auto" />
                </a>
                <!-- Menu navigasi lain -->
            </nav>
          
                <a href="/AdminSystem/Dashboard" class="@(Context.Request.Path == "/AdminSystem/Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a href="/AdminSystem/RawMaterial" class="@(Context.Request.Path == "/AdminSystem/RawMaterial" ? "active" : "")">
                    <i class="bi bi-box-seam"></i> Raw Material
                </a>
                <a href="/AdminSystem/Machine" class="@(Context.Request.Path == "/AdminSystem/Machine" ? "active" : "")">
                    <i class="bi bi-list-ul"></i> Machine List
                </a>
                <a href="/AdminSystem/MachineCategories" class="@(Context.Request.Path == "/AdminSystem/MachineCategories" ? "active" : "")">
                    <i class="bi bi-gear-fill"></i> Machine Categories
                </a>
                <a href="/AdminSystem/UserList" class="@(Context.Request.Path == "/AdminSystem/UserList" ? "active" : "")">
                    <i class="bi bi-people-fill"></i> User List
                </a>
                <a href="/AdminSystem/WeeksFabrication" class="@(Context.Request.Path == "/AdminSystem/WeeksFabrication" ? "active" : "")">
                    <i class="bi bi-calendar-check"></i> Weeks Fabrication
                </a>
                 <a href="/AdminSystem/YearsSetting" class="@(Context.Request.Path == "/AdminSystem/YearsSetting" ? "active" : "")">
                    <i class="bi bi-calendar"></i> Years Setting
                </a>
                <a href="/" >
                    <i class="bi bi-power"></i> Admin System OFF
                </a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
          
            <!-- Header -->
            <header class="header d-flex justify-content-between align-items-center px-3 py-2 bg-light border-bottom">
                <h5 class="mb-0">EWOS Inhouse Fabrication</h5>

                <!-- User Greeting -->
                <div class="user-greeting">
                    <p class="mb-0">Hi, @ViewBag.Name</p>
                </div>
            </header>


            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-light text-center py-2">
                <p class="mb-0 small">&copy; @DateTime.Now.Year PT Excelitas Technologies Batam</p>
            </footer>

        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sweetalert Toast -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/toast.js"></script>

    <!-- Apex chart -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

    <!-- loading efek -->
    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll("form");

            forms.forEach(function(form) {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    // Nonaktifkan semua tombol submit
                    const submitButtons = form.querySelectorAll('[type="submit"]');
                    submitButtons.forEach(btn => {
                        btn.disabled = true;
                        btn.classList.add("disabled");
                        btn.style.opacity = "0.7";
                    });

                    // Timer untuk delay sebelum menampilkan spinner
                    let spinnerTimeout = setTimeout(() => {
                        const overlay = document.getElementById("globalLoadingOverlay");
                        if (overlay) overlay.style.display = "flex";
                    }, 1000); 

                    // Kirim form setelah submit
                    form.submit();
                });
            });
        });
    </script>

  @*   @RenderBody()
    <partial name="_NotificationPartial" /> *@
    @RenderSection("Scripts", required: false)
</body>
</html>
