@{
    var role = ViewBag.UserRole as string ?? "AdminSystem";
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inhouse Fabrication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EWOS_MVC.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            padding: 20px 10px;
            color: white;
        }

            .sidebar h5 {
                font-size: 18px;
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                color: #f8f9fa;
                padding: 12px 15px;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                border-radius: 5px;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: white;
                }

        .btn-logout {
            width: 100%;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: #f8f9fa;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #f1f3f5;
        }

        .footer {
            background: #f8f9fa;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar"
             style="background-color: @(role == "SuperAdmin" ? "#212529" : role == "AdminFabrication" ? "#212529" : role == "Requestor" ? "#1e1e2f" : "#212529")">

            @if (role == "AdminSystem")
            {
                <h5>🛡️ Admin Sistem Panel</h5>
                <a href="/AdminSystem/Dashboard" class="@(Context.Request.Path == "/AdminSystem/Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a href="/AdminSystem/RawMaterial" class="@(Context.Request.Path == "/AdminSystem/RawMaterial" ? "active" : "")">
                    <i class="bi bi-box-seam"></i> Raw Material
                </a>
                <a href="/AdminSystem/Machine" class="@(Context.Request.Path == "/AdminSystem/Machine" ? "active" : "")">
                    <i class="bi bi-list-ul"></i> Machine List
                </a>
                <a href="/AdminSystem/MachineCategories" class="@(Context.Request.Path == "/AdminSystem/MachineCategories" ? "active" : "")">
                    <i class="bi bi-gear-fill"></i> Machine Categories
                </a>
                <a href="/AdminSystem/AdminUsers" class="@(Context.Request.Path == "/AdminSystem/AdminUsers" ? "active" : "")">
                    <i class="bi bi-people-fill"></i> User List
                </a>
                <a href="/AdminSystem/WeeksFabrication" class="@(Context.Request.Path == "/AdminSystem/WeeksFabrication" ? "active" : "")">
                    <i class="bi bi-calendar-check"></i> Weeks Fabrication
                </a>
                <a href="/AdminSystem/YearsSetting" class="@(Context.Request.Path == "/AdminSystem/YearsSetting" ? "active" : "")">
                    <i class="bi bi-calendar"></i> Years Setting
                </a>
                
            }
            else if (role == "AdminFabrication")
            {
                <h5 class="text-center">🛠 Admin Fabrikasi</h5>
                <a href="/AdminFabrication/Dashboard" class="@(Context.Request.Path == "/AdminFabrication/Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a class="d-flex align-items-center justify-content-between
                        @(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "active" : "")"
                   data-bs-toggle="collapse" href="#submenuRequest"
                   role="button"
                   aria-expanded="@(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "true" : "false")"
                   aria-controls="submenuRequest">
                    <span><i class="bi bi-box-seam"></i> Data Request</span>
                    <i class="bi bi-caret-down-fill"></i>
                </a>

                <div class="collapse ps-4 @(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "show" : "")"
                     id="submenuRequest">
                    <a href="/AdminFabrication/NewRequest/WaitingApprove" class="d-block @(ViewBag.CurrentStatus == "WaitingApprove" ? "active" : "")">
                        <i class="bi bi-circle"></i> Waiting Approve
                    </a>
                    <a href="/AdminFabrication/NewRequest/Approved" class="d-block @(ViewBag.CurrentStatus == "Approved" ? "active" : "")">
                        <i class="bi bi-circle"></i> Approved
                    </a>
                    <a href="/AdminFabrication/NewRequest/Done" class="d-block @(ViewBag.CurrentStatus == "Done" ? "active" : "")">
                        <i class="bi bi-circle"></i> Done
                    </a>
                    <a href="/AdminFabrication/NewRequest/Rejected" class="d-block @(ViewBag.CurrentStatus == "Rejected" ? "active" : "")">
                        <i class="bi bi-circle"></i> Rejected
                    </a>
                </div>

                <a href="/AdminFabrication/FabricationItem" class="@(Context.Request.Path == "/AdminFabrication/Repeat Request" ? "active" : "")">
                    <i class="bi bi-repeat"></i> Repeat Request
                </a>

                <a class="d-flex align-items-center justify-content-between
                        @(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "active" : "")"
                   data-bs-toggle="collapse" href="#submenuFabrication"
                   role="button"
                   aria-expanded="@(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "true" : "false")"
                   aria-controls="submenuFabrication">
                    <span><i class="bi bi-gear-wide-connected"></i> Data Fabrikasi</span>
                    <i class="bi bi-caret-down-fill"></i>
                </a>
                <div class="collapse ps-4 @(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "show" : "")" id="submenuFabrication">
                    <a href="/AdminFabrication/ItemFabrication/Onprogress" class="d-block @(ViewBag.CurrentStatus == "Onprogress" ? "active" : "")">
                        <i class="bi bi-circle"></i> Onprogress
                    </a>
                    <a href="/AdminFabrication/ItemFabrication/Done" class="d-block @(ViewBag.CurrentStatus == "Done" ? "active" : "")">
                        <i class="bi bi-circle"></i> Done
                    </a>
                </div>

                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" id="logoutForm">
                    <button type="submit" class="btn btn-danger btn-logout mt-3">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            }
            else if (role == "Requestor")
            {
                <h5>📦 Requestor Panel</h5>
                <a href="/Requestor/Dashboard" class="@(Context.Request.Path == "/Requestor/Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a href="/Requestor/Progress" class="@(Context.Request.Path == "/Requestor/Progress" ? "active" : "")">
                    <i class="bi bi-hourglass-split"></i> Progress Request
                </a>
                <a href="/NewRequest" class="@(Context.Request.Path == "/NewRequest" ? "active" : "")">
                    <i class="bi bi-file-earmark-plus"></i> New Request
                </a>
                <a href="/Requestor/RepeatOrder" class="@(Context.Request.Path == "/Requestor/RepeatOrder" ? "active" : "")">
                    <i class="bi bi-arrow-repeat"></i> Repeat Order
                </a>
                <a href="/Identity/Account/Login" class="">
                    <i class="bi bi-box-arrow-in-right"></i> Login Admin
                </a>
            }
            else
            {
                <h5>Unknown Role</h5>
            }
        </div>

        <!-- Main Content -->
        <div class="main-content">
          
            <!-- Header -->
            <div class="header d-flex justify-content-between align-items-center px-3 py-2 bg-light border-bottom">
                <span class="h5 mb-0">PT Excelitas Technologies Batam</span>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" id="logoutForm">
                                <button type="submit" class="btn btn-danger btn-logout mx-auto">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                        
                    </ul>
                </div>
            </div>


            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-light text-center py-2">
                <p class="mb-0 small">&copy; @DateTime.Now.Year PT Excelitas Technologies Batam</p>
            </footer>

        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sweetalert Toast -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/toast.js"></script>

  @*   @RenderBody()
    <partial name="_NotificationPartial" /> *@
</body>
</html>
