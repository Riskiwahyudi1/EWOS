@{
    var role = ViewBag.UserRole as string ?? "AdminFabrication";
}


<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inhouse Fabrication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EWOS_MVC.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- CSS global -->
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            padding: 20px 10px;
            color: white;
        }

            .sidebar h5 {
                font-size: 18px;
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                color: #f8f9fa;
                padding: 12px 15px;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                border-radius: 5px;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: white;
                }

        .btn-logout {
            width: 100%;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: #f8f9fa;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #f1f3f5;
        }

        .footer {
            background: #f8f9fa;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }
    </style>
    <style>
         /* loading efek */
        #globalLoadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.6);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 2000; /* lebih tinggi dari modal */
        }

            #globalLoadingOverlay .spinner-border {
                width: 3rem;
                height: 3rem;
            }
    </style>
</head>
<body>
    <!-- loading efek -->
    <div id="globalLoadingOverlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar"
             style="background-color: @(role == "AdminSystem" ? "#212529" : role == "AdminFabrication" ? "#212529" : role == "Requestor" ? "#1e1e2f" : "#212529")">
            <nav>
                <!-- Menambahkan logo -->
                <a href="/">
                    <img src="~/images/EXL-Logo.png" alt="Logo" style="height:50px; margin: auto" />
                </a>
                <!-- Menu navigasi lain -->
            </nav>
            @if (role == "AdminSystem")
            {
                <a href="/AdminSystem/Dashboard" class="@(Context.Request.Path == "/AdminSystem/Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a href="/AdminSystem/RawMaterial" class="@(Context.Request.Path == "/AdminSystem/RawMaterial" ? "active" : "")">
                    <i class="bi bi-box-seam"></i> Raw Material
                </a>
                <a href="/AdminSystem/Machine" class="@(Context.Request.Path == "/AdminSystem/Machine" ? "active" : "")">
                    <i class="bi bi-list-ul"></i> Machine List
                </a>
                <a href="/AdminSystem/MachineCategories" class="@(Context.Request.Path == "/AdminSystem/MachineCategories" ? "active" : "")">
                    <i class="bi bi-gear-fill"></i> Machine Categories
                </a>
                <a href="/AdminSystem/AdminUsers" class="@(Context.Request.Path == "/AdminSystem/AdminUsers" ? "active" : "")">
                    <i class="bi bi-people-fill"></i> User List
                </a>
                <a href="/AdminSystem/WeeksFabrication" class="@(Context.Request.Path == "/AdminSystem/WeeksFabrication" ? "active" : "")">
                    <i class="bi bi-calendar-check"></i> Weeks Fabrication
                </a>
                <a href="/AdminSystem/YearsSetting" class="@(Context.Request.Path == "/AdminSystem/YearsSetting" ? "active" : "")">
                    <i class="bi bi-calendar"></i> Years Setting
                </a>
            }
            else if (role == "AdminFabrication" || role == "Requestor" || role == "Supervisor")
            {
                <!-- Main menu -->
                <div class="sidebar-section">
                    @if (role == "AdminFabrication" || role == "Supervisor")
                    {
                    <h6 class="text-uppercase text-muted px-3 mt-3 mb-2">Main Menu</h6>
                        
                    }
                    <a href="/Requestor/Dashboard" class="nav-link px-3 @(Context.Request.Path == "/Requestor/Dashboard" ? "active" : "")">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                    <a href="/Requestor/FabricationHistory" class="nav-link px-3 @(Context.Request.Path == "/Requestor/FabricationHistory" ? "active" : "")">
                        <i class="bi bi-clock-history"></i> Fabrication History
                    </a>
                    <a href="/Requestor/NewRequest" class="nav-link px-3 @(Context.Request.Path == "/Requestor/NewRequest" ? "active" : "")">
                        <i class="bi bi-file-earmark-plus"></i> Form Request
                    </a>
                    <a href="/Requestor/ListProduct" class="nav-link px-3 @(Context.Request.Path == "/Requestor/ListProduct" ? "active" : "")">
                        <i class="bi bi-list-check"></i> List Product
                    </a>
                    <a class="nav-link px-3 d-flex align-items-center justify-content-between @(Context.Request.Path.StartsWithSegments("/Requestor/MyRequest") ? "active" : "")"
                       data-bs-toggle="collapse" href="#submenuMyRequest"
                       role="button" aria-expanded="@(Context.Request.Path.StartsWithSegments("/Requestor/MyRequest") ? "true" : "false")"
                       aria-controls="submenuMyRequest">
                        <span><i class="bi bi-folder"></i> My Request</span>
                        <i class="bi bi-plus"></i>
                    </a>

                    <div class="collapse ps-4 py-0 @(Context.Request.Path.StartsWithSegments("/Requestor/MyRequest") ? "show" : "")" id="submenuMyRequest">
                        <a href="/Requestor/MyRequest/WaitingApprove" class="d-block @(ViewBag.CurrentStatus == "WaitingApprove" ? "active" : "")">
                            <i class="bi bi-circle"></i> Waiting Approve
                        </a>
                        <a href="/Requestor/MyRequest/WaitingFabrication" class="d-block @(ViewBag.CurrentStatus == "WaitingFabrication" ? "active" : "")">
                            <i class="bi bi-circle"></i> Waiting Fabrication
                        </a>
                        <a href="/Requestor/MyRequest/Onprocess" class="d-block @(ViewBag.CurrentStatus == "Onprocess" ? "active" : "")">
                            <i class="bi bi-circle"></i> Onprocess
                        </a>
                        <a href="/Requestor/MyRequest/Done" class="d-block @(ViewBag.CurrentStatus == "Done" ? "active" : "")">
                            <i class="bi bi-circle"></i> Done
                        </a>
                        <a href="/Requestor/MyRequest/Rejected" class="d-block @(ViewBag.CurrentStatus == "Rejected" ? "active" : "")">
                            <i class="bi bi-circle"></i> Rejected
                        </a>
                    </div>
                </div>

                <!-- Role fabrication only -->
                @if (role == "AdminFabrication")
                {
                    <div class="sidebar-section mt-3 ">
                        <h6 class="text-uppercase text-muted px-3 mb-2">Fabrication Menu</h6>

                        <a class="d-flex align-items-center justify-content-between
                                @(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "active" : "")"
                           data-bs-toggle="collapse" href="#submenuRequest"
                           role="button"
                           aria-expanded="@(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "true" : "false")"
                           aria-controls="submenuRequest">
                            <span><i class="bi bi-box-seam"></i> Data New Request</span>
                            <i class="bi bi-plus"></i>
                        </a>

                        <div class="collapse ps-4 @(Context.Request.Path.StartsWithSegments("/AdminFabrication/NewRequest") ? "show" : "")"
                             id="submenuRequest">
                            <a href="/AdminFabrication/NewRequest/WaitingApprove" class="d-block @(ViewBag.CurrentStatus == "WaitingApprove" ? "active" : "")">
                                <i class="bi bi-circle"></i> Waiting Approve
                            </a>
                            <a href="/AdminFabrication/NewRequest/Approved" class="d-block @(ViewBag.CurrentStatus == "Approved" ? "active" : "")">
                                <i class="bi bi-circle"></i> Approved
                            </a>
                            <a href="/AdminFabrication/NewRequest/Done" class="d-block @(ViewBag.CurrentStatus == "Done" ? "active" : "")">
                                <i class="bi bi-circle"></i> Done
                            </a>
                            <a href="/AdminFabrication/NewRequest/Rejected" class="d-block @(ViewBag.CurrentStatus == "Rejected" ? "active" : "")">
                                <i class="bi bi-circle"></i> Rejected
                            </a>
                        </div>

                        <a href="/AdminFabrication/RepeatOrder" class="@(Context.Request.Path == "/AdminFabrication/RepeatOrder" ? "active" : "")">
                            <i class="bi bi-repeat"></i> Repeat Order
                        </a>

                        <a class="d-flex align-items-center justify-content-between
                                @(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "active" : "")"
                           data-bs-toggle="collapse" href="#submenuFabrication"
                           role="button"
                           aria-expanded="@(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "true" : "false")"
                           aria-controls="submenuFabrication">
                            <span><i class="bi bi-gear-wide-connected"></i> Data Fabrikasi</span>
                            <i class="bi bi-plus"></i>
                        </a>
                        <div class="collapse ps-4 @(Context.Request.Path.StartsWithSegments("/AdminFabrication/ItemFabrication") ? "show" : "")" id="submenuFabrication">
                            <a href="/AdminFabrication/ItemFabrication/Onprogress" class="d-block @(ViewBag.CurrentStatus == "Onprogress" ? "active" : "")">
                                <i class="bi bi-circle"></i> Onprogress
                            </a>
                            <a href="/AdminFabrication/ItemFabrication/Done" class="d-block @(ViewBag.CurrentStatus == "Done" ? "active" : "")">
                                <i class="bi bi-circle"></i> Done
                            </a>
                        </div>
                    </div>
                }else if (role == "Supervisor")
                {
                    <h6 class="text-uppercase text-muted px-3 mt-3 mb-2">Supervisor Menu</h6>

                    <a href="/Supervisor/Approval" class="nav-link px-3 @(Context.Request.Path == "/Supervisor/Approval" ? "active" : "")">
                        <i class="bi bi-hourglass-split"></i> Waiting Approval
                    </a>
                }
            }
            else
            {
                <h5>Unknown Role</h5>
            }

        </div>

        <!-- Main Content -->
        <div class="main-content">
          
            <!-- Header -->
            <div class="header d-flex justify-content-between align-items-center px-3 py-2 bg-light border-bottom">
                <span class="h5 mb-0">EWOS Inhouse Fabrication</span>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" id="logoutForm">
                                <button type="submit" class="btn btn-danger btn-logout mx-auto">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                        
                    </ul>
                </div>
            </div>


            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-light text-center py-2">
                <p class="mb-0 small">&copy; @DateTime.Now.Year PT Excelitas Technologies Batam</p>
            </footer>

        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sweetalert Toast -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/toast.js"></script>

    <!-- Apex chart -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

    <!-- loading efek -->
    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll("form");

            forms.forEach(function(form) {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    // Nonaktifkan semua tombol submit
                    const submitButtons = form.querySelectorAll('[type="submit"]');
                    submitButtons.forEach(btn => {
                        btn.disabled = true;
                        btn.classList.add("disabled");
                        btn.style.opacity = "0.7";
                    });

                    // Timer untuk delay sebelum menampilkan spinner
                    let spinnerTimeout = setTimeout(() => {
                        const overlay = document.getElementById("globalLoadingOverlay");
                        if (overlay) overlay.style.display = "flex";
                    }, 1000); 

                    // Kirim form setelah submit
                    form.submit();
                });
            });
        });
    </script>

  @*   @RenderBody()
    <partial name="_NotificationPartial" /> *@
    @RenderSection("Scripts", required: false)
</body>
</html>
