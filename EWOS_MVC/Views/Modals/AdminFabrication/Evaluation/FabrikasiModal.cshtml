@model EWOS_MVC.Models.ItemRequestModel

<div class="modal-header bg-primary">
    <h5 class="modal-title">Fabrikasi</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
</div>
<div class="modal-body">
    <form method="post" action="/AdminFabrication/Request/AddFabrikasiNew">
        @Html.AntiForgeryToken()

        <input type="hidden" name="ItemRequestId" value="@Model.Id" />
        <div class="form-group mb-3">
            <label for="MachineId" class="mb-2">Mesin Fabrikasi</label>
            @await Component.InvokeAsync("MachineList", new { selectedId = Model.MachineCategoryId })
            <span class="text-danger"></span>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary">Proses</button>
        </div>
    </form>
</div>