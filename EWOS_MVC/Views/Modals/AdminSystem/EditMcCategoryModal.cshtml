@model EWOS_MVC.Models.MachineCategoriesModel


<form method="post" action="/AdminSystem/MachineCategories/Edit">
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title" >Edit Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
    </div>

    <div class="modal-body">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label asp-for="CategoryName">Category Name</label>
            <input name="CategoryName" class="form-control" value="@Model.CategoryName" required />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>