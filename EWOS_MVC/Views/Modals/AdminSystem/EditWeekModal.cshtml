@model EWOS_MVC.Models.WeeksSettingModel

<form method="post" action="/AdminSystem/WeekFabrication/Edit">
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title" >Edit Week</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
    </div>

    <div class="modal-body">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group mb-2">
            <label>Week No</label>
            <input name="Week" class="form-control" value="@Model.Week" readonly />
        </div>

        <div class="form-group mb-2">
            <label>Work Days</label>
            <input type="number" step="0.01" name="WorkingDays" class="form-control" value="@Model.WorkingDays" required />
        </div>

        <div class="form-group mb-2">
            <label>Month</label>
            <input name="Month" type="number" class="form-control" value="@Model.Month" required />
        </div>

        <div class="form-group mb-2">
            <label>Week Start</label>
            <input name="StartDate" type="datetime-local" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" required />
        </div>

        <div class="form-group mb-2">
            <label>Week End</label>
            <input name="EndDate" type="datetime-local" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" required />
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>