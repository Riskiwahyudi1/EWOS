@model EWOS_MVC.Models.YearsSettingModel

<form method="post" action="/AdminSystem/YearsSetting/Edit">
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">Edit Data</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
    </div>

    <div class="modal-body">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group mb-2">
            <label asp-for="Year">Year</label>
            <input value="@Model.Year" class="form-control" readonly />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="StartDate">Start Day</label>
            <input name="StartDate" type="date" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="ElectricalCost" class="form-label">Elecrical Cost</label>
            <input name="ElectricalCost" class="form-control" type="number" step="0.00001" placeholder="0,00" value="@Model.ElectricalCost" />
            <span asp-validation-for="ElectricalCost" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>