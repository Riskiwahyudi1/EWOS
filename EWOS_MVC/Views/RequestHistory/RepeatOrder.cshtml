﻿﻿@using EWOS_MVC.Services
@model PaginatedHelper<EWOS_MVC.Models.RepeatOrderModel>
@{
    ViewData["Title"] = "History request";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <h5 class="mb-0">History Repeat Order</h5>
</div>
<div class="d-flex align-items-center mb-3 gap-2">
    <div class="col-2 col-sm-2">
        @await Component.InvokeAsync("MachineCategories")
    </div>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 300px;">
</div>

<div class="tab-wrapper">

    @{
        var summary = ViewBag.StatusSummaryRo as Dictionary<string, int>;
        int GetCount(string status) => summary != null && summary.ContainsKey(status) ? summary[status] : 0;
    }
    <!-- Tab Bar-->
    <ul class="nav nav-tabs justify-content-center" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    id="done-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#Done"
                    data-status="FabricationDone,Close"
                    type="button"
                    role="tab">
                Finish
                @{
                    var doneFabCount = GetCount("FabricationDone");
                    var FabCloseCount = GetCount("Close");
                    var totalCountDone = FabCloseCount + doneFabCount;
                }
                @if (totalCountDone > 0)
                {
                    <span class="badge bg-danger rounded-pill">@totalCountDone</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link "
                    id="waitingapproval-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#waitingapproval"
                    data-status="WaitingApproval,FabricationApproval"
                    type="button"
                    role="tab">
                Waiting Approval
                @{
                    var waitingApprovalCount = GetCount("WaitingApproval");
                    var fabricationApprocalCount = GetCount("FabricationApproval");
                    var totalCountWaiting = waitingApprovalCount + fabricationApprocalCount;
                }
                @if (totalCountWaiting > 0)
                {
                    <span class="badge bg-danger rounded-pill">@totalCountWaiting</span>
                }
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    id="waitingfabrication-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#WaitingFabrication"
                    data-status="WaitingFabrication,ComplateFabrication"
                    type="button"
                    role="tab">
                Waiting Fabrication
                @{
                    var waitingFabCount = GetCount("WaitingFabrication");
                    var FabCompplateCount = GetCount("ComplateFabrication");
                    var totalCountFab = FabCompplateCount + waitingFabCount;
                }
                @if (totalCountFab > 0)
                {
                    <span class="badge bg-danger rounded-pill">@totalCountFab</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    id="waitingbuyoff-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#WaitingBuyOff"
                    data-status="Done"
                    type="button"
                    role="tab">
                Waiting Buyoff
                @if (GetCount("Done") > 0)
                {
                    <span class="badge bg-danger rounded-pill">@GetCount("Done")</span>
                }
            </button>
        </li>
        
      
    </ul>
</div>
<table class="table table-sm table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>ID Request</th>
            <th>Requestor</th>
            <th>Item Name</th>
            <th>Machine Category</th>
            <th>Request Date</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="12" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var rm in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@rm.Id</td>
                    <td>@rm.Users.Name</td>
                    <td>@rm.ItemRequests.PartName</td>
                    <td>@rm.ItemRequests.MachineCategories?.CategoryName</td>
                    <td>@rm.CreatedAt</td>

                    <td class="text-center">
                        <div class="dropstart d-inline-block">
                            <button class="btn btn-secondary btn-sm dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown">
                                Actions
                            </button>

                            <ul class="dropdown-menu p-2" style="min-width:160px">

                                <!-- Detail -->
                                <li>
                                    <button class="btn btn-warning btn-sm w-100 text-center open-modal"
                                            data-url="/RequestHistory/LoadDataRo?Id=@rm.Id&type=Detail">
                                        Detail
                                    </button>
                                </li>

                                <!-- Progress -->
                                <li class="mt-1">
                                    <button class="btn btn-info btn-sm w-100 text-center open-modal"
                                            data-url="/RequestHistory/LoadDataRoFab?Id=@rm.Id&type=Status">
                                        Progress
                                    </button>
                                </li>

                            </ul>
                        </div>
                    </td>


                </tr>
                index++;
            }
        }

    </tbody>
</table>

<!-- Pagination Razor (default) -->
<div id="pagination-server">
    @if (Model.TotalPages > 1)
    {
        int maxPagesToShow = 3;
        int startPage = Model.PageIndex - 2;
        int endPage = Model.PageIndex + 2;

        // Koreksi awal jika startPage < 1
        if (startPage < 1)
        {
            endPage += (1 - startPage);
            startPage = 1;
        }

        // Koreksi akhir jika endPage > TotalPages
        if (endPage > Model.TotalPages)
        {
            startPage -= (endPage - Model.TotalPages);
            endPage = Model.TotalPages;
        }

        // Pastikan jumlah tombol maksimum 5
        if (endPage - startPage + 1 > maxPagesToShow)
        {
            endPage = startPage + maxPagesToShow - 1;
        }
        if (startPage < 1)
        {
            startPage = 1;
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <!-- Previous -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex - 1)">Previous</a>
                </li>

                <!-- Jika page di awal -> tampil "1" lalu ... -->
                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }

                <!-- Page number utama -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                <!-- Jika page di akhir -> tampil ... lalu lastPage -->
                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex + 1)">Next</a>
                </li>

            </ul>
        </nav>
    }
</div>
<!-- Pagination JS (hidden default) -->
<div id="pagination-client" style="display:none;">
    <nav>
        <ul class="pagination justify-content-end" id="pagination-js"></ul>
    </nav>
</div>
<script src="~/js/General/requestHistoryRo.js"></script>