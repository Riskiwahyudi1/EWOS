@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Bootstrap Icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">


    <style>
        body {
            background: linear-gradient(135deg, #e9eef7 0%, #ffffff 100%);
            min-height: 100vh;
        }

   

        /* FULLSCREEN LANDING */
        .landing-wrapper {
            min-height: calc(100vh - 70px);
        }

        /* GRID PEMBAGI RUANG */
        .landing-inner {
            height: 100%;
            display: grid;
            grid-template-rows: 1.3fr 1fr; /* HERO : SUMMARY */
            align-items: center;
        }

        /* HERO */
        .hero-section {
            max-width: 900px;
            margin: 0 auto;
            padding-top: 30px;
        }

        /* SUMMARY */
        .summary-section {
            padding-bottom: 40px;
        }

        /* CARD STYLE */
        .stat-card {
            border-radius: 16px;
            border: none;
            box-shadow: 0 12px 30px rgba(0,0,0,.08);
            transition: all .3s ease;
        }

            .stat-card:hover {
                transform: translateY(-6px);
            }

            /* ICON */
            .stat-card .icon {
                width: 64px;
                height: 64px;
                border-radius: 50%;
                margin: 0 auto 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 26px;
            }

        .dashboard-title {
            font-weight: 700;
            color: #2a2d3e;
            margin-top: 20px;
            letter-spacing: 1px;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

        .guide-card {
            border-radius: 15px;
        }
    </style>
</head>

<body>


    <style>
        body {
            background: linear-gradient(135deg, #e9eef7 0%, #ffffff 100%);
            min-height: 100vh;
        }

        .dashboard-title {
            font-weight: 700;
            color: #2a2d3e;
            margin-top: 20px;
            letter-spacing: 1px;
        }

        /* Card Modern */
        .stat-card {
            transition: 0.3s ease-in-out;
            border: none;
            border-radius: 15px;
        }

            .stat-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
            }

        .icon-wrapper {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 10px;
        }

        /* Panduan */
        .guide-card {
            border-radius: 15px;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
    </style>


    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                Inhouse Fabrication
            </a>

            <div class="ms-auto">
                <a href="/Dashboard" class="btn btn-primary">
                    <i class="bi bi-speedometer2 me-1"></i>
                    Dashboard
                </a>
            </div>
        </div>
    </nav>

    <!-- LANDING (HERO + SUMMARY = 100vh) -->
    <section class="landing-wrapper" style="padding-top: 70px; min-height: 100vh; display: flex; flex-direction: column; justify-content: center;">

        <div class="landing-inner container">

            <!-- HERO -->
            <div class="row align-items-center mb-5">

                <!-- Teks Hero (Kiri) -->
                <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
                    <h1 class="fw-bold display-4 mb-3">
                        Inhouse Fabrication System
                    </h1>
                    <p class="text-muted fs-5">
                        Sistem terintegrasi untuk pengajuan request, monitoring proses fabrikasi,
                        pengendalian biaya, dan manajemen produksi
                    </p>
                    <div class="ms-auto">
                        <a href="/NewRequest" class="btn btn-primary">
                            <i class="bi bi-speedometer2 me-1"></i>
                            Request Fabrikasi
                        </a>
                    </div>
                </div>
                
                <!-- Gambar SVG (Kanan) -->
                <div class="col-md-6 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="auto" viewBox="0 0 600 300" fill="none" role="img" aria-label="Illustration">
                        <!-- Background -->
                        <rect width="600" height="300" rx="20" fill="#0d6efd" fill-opacity="0.1" />
                        <!-- Circle / Mesin CNC -->
                        <circle cx="200" cy="125" r="50" fill="#0d6efd" />
                        <!-- Rectangle / 3D Printing -->
                        <rect x="350" y="100" width="150" height="80" rx="15" fill="#0d6efd" />
                        <!-- Connector Line -->
                        <path d="M350 100 L500 180" stroke="#0d6efd" stroke-width="8" stroke-linecap="round" />
                        <!-- Logo Text -->
                        <text x="200" y="135" fill="white" font-size="36" font-weight="bold" font-family="Arial, sans-serif" text-anchor="middle">FAB</text>
                    </svg>
                </div>

            </div>

            <!-- SUMMARY -->
            <div class="summary-section">
                <div class="row g-4 justify-content-center">

                    <div class="col-lg-3 col-md-6">
                        <div class="card stat-card border-top border-4 border-primary shadow-sm">
                            <div class="card-body text-center">
                                <div class="icon bg-primary bg-opacity-10 text-primary mb-3 rounded-circle d-inline-flex align-items-center justify-content-center" style="width:70px; height:70px;">
                                    <i class="bi bi-clipboard-plus fs-3"></i>
                                </div>
                                <h6 class="text-muted">Total Request Fabrikasi</h6>
                                <h2 class="fw-bold text-primary">@ViewBag.TotalReq</h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card stat-card border-top border-4 border-info shadow-sm">
                            <div class="card-body text-center">
                                <div class="icon bg-info bg-opacity-10 text-info mb-3 rounded-circle d-inline-flex align-items-center justify-content-center" style="width:70px; height:70px;">
                                    <i class="bi bi-box-seam fs-3"></i>
                                </div>
                                <h6 class="text-muted">Total Quantity Request</h6>
                                <h2 class="fw-bold text-info">@ViewBag.TotalQty</h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card stat-card border-top border-4 border-success shadow-sm">
                            <div class="card-body text-center">
                                <div class="icon bg-success bg-opacity-10 text-success mb-3 rounded-circle d-inline-flex align-items-center justify-content-center" style="width:70px; height:70px;">
                                    <i class="bi bi-check-circle fs-3"></i>
                                </div>
                                <h6 class="text-muted">Fabrikasi Selesai</h6>
                                <h2 class="fw-bold text-success">@ViewBag.TotalQtyFab</h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card stat-card border-top border-4 border-warning shadow-sm">
                            <div class="card-body text-center">
                                <div class="icon bg-warning bg-opacity-10 text-warning mb-3 rounded-circle d-inline-flex align-items-center justify-content-center" style="width:70px; height:70px;">
                                    <i class="bi bi-cash-stack fs-3"></i>
                                </div>
                                <h6 class="text-muted">Total Saving Cost</h6>
                                <h2 class="fw-bold text-warning">
                                    @ViewBag.TotalSavingFab.ToString("C",
                                             new System.Globalization.CultureInfo("en-US"))
                                </h2>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </section>



    <!-- =========================================
         SECTION: PROCESS FLOW
    ========================================== -->
    <section class="section process-section">
        <div class="text-center mb-4">
            <h4 class="fw-bold">
                <i class="bi bi-diagram-3 me-2"></i>
                Alur Proses Fabrikasi
            </h4>
            <p class="text-muted mb-0">
                Tahapan proses dari pengajuan hingga konfirmasi hasil fabrikasi
            </p>
        </div>

        <div class="d-flex align-items-stretch justify-content-between flex-wrap flex-md-nowrap gap-3 text-center">

            <!-- STEP 1 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-file-earmark-plus fs-2 text-primary mb-3"></i>
                        <h6 class="fw-semibold mb-2">Request Fabrikasi</h6>
                        <p class="text-muted small mb-0">
                            Requestor mengajukan permintaan
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-none d-md-flex align-items-center">
                <i class="bi bi-arrow-right fs-3 text-secondary"></i>
            </div>

            <!-- STEP 2 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-person-check fs-2 text-info mb-3"></i>
                        <h6 class="fw-semibold mb-2">Approval Engineer</h6>
                        <p class="text-muted small mb-0">
                            Engineer melakukan Approval
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-none d-md-flex align-items-center">
                <i class="bi bi-arrow-right fs-3 text-secondary"></i>
            </div>

            <!-- STEP 3 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-clipboard-data fs-2 text-secondary mb-3"></i>
                        <h6 class="fw-semibold mb-2">Plan Fabrikasi</h6>
                        <p class="text-muted small mb-0">
                            Membuat plan pengerjaan fabrikasi
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-none d-md-flex align-items-center">
                <i class="bi bi-arrow-right fs-3 text-secondary"></i>
            </div>

            <!-- STEP 4 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-tools fs-2 text-warning mb-3"></i>
                        <h6 class="fw-semibold mb-2">Proses Fabrikasi</h6>
                        <p class="text-muted small mb-0">
                            Tim fabrikasi melakukan proses pengerjaan
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-none d-md-flex align-items-center">
                <i class="bi bi-arrow-right fs-3 text-secondary"></i>
            </div>

            <!-- STEP 5 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-bell-fill fs-2 text-success mb-3"></i>
                        <h6 class="fw-semibold mb-2">Notifikasi Selesai</h6>
                        <p class="text-muted small mb-0">
                            Requestor mendapat notifikasi via Email
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-none d-md-flex align-items-center">
                <i class="bi bi-arrow-right fs-3 text-secondary"></i>
            </div>

            <!-- STEP 6 -->
            <div class="flow-step">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-center px-4">
                        <i class="bi bi-check-circle-fill fs-2 text-primary mb-3"></i>
                        <h6 class="fw-semibold mb-2">Konfirmasi Hasil</h6>
                        <p class="text-muted small mb-0">
                            Requestor melakukan konfirmasi
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </section>


    <!-- =========================================
         SECTION: INFORMATION / ANNOUNCEMENT
    ========================================== -->
    <section class="section info-section">
        <div class="row">
            <!-- isi informasi tambahan -->
        </div>
    </section>


    <!-- =========================================
         SECTION: FAQ / HELP
    ========================================== -->
    <section class="section faq-section">
        <div class="card shadow-sm border-0 guide-card mt-5 p-4">
            <h4 class="text-center"><i class="bi bi-question-circle"></i> FAQ – Panduan Penggunaan System</h4>
            <hr>

            <div class="accordion" id="faqAccordion">

                <!-- FAQ 1 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="faqOneHeading">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqOne" aria-expanded="false">
                            Bagaimana cara membuat request baru?
                        </button>
                    </h2>
                    <div id="faqOne" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <ol class="text-start mb-0">
                                <li>Buka menu <strong>Form Request</strong> untuk membuat request fabrikasi baru.</li>
                                <li>Isi seluruh data item seperti nama produk, spesifikasi, jumlah, dan tanggal butuh.</li>
                                <li>Klik <strong>Submit</strong> untuk mengirim request ke bagian fabrikasi.</li>
                            </ol>
                        </div>
                    </div>
                </div>


                <!-- FAQ 2 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="faqTwoHeading">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqTwo">
                            Bagaimana cara melakukan repeat order?
                        </button>
                    </h2>
                    <div id="faqTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <ol class="text-start mb-0">
                                <li>Buka menu <strong>List Product</strong>.</li>
                                <li>Cari produk yang sudah pernah difabrikasi menggunakan kolom pencarian.</li>
                                <li>Pilih produk yang ingin di-repeat.</li>
                                <li>Klik tombol <strong>Request</strong> lalu masukan jumlah dan tanggal butuh.</li>
                                <li>Submit permintaan repeat order.</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- FAQ 3 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="faqThreeHeading">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqThree">
                            Di mana saya bisa melihat status request?
                        </button>
                    </h2>
                    <div id="faqThree" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <ol class="text-start mb-0">
                                <li>Buka menu <strong>My Request</strong>.</li>
                                <li>Pilih jenis request (Evaluasi atau Repeat Order).</li>
                                <li>Lihat status request: Waiting, Proses, atau Selesai.</li>
                            </ol>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    </div>




    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
