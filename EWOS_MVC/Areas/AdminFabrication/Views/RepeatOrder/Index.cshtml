@{
    ViewData["Title"] = "Repeat Order";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="my-3">Data Repeat Order</h5>

@if (TempData["Error"] != null || TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @(TempData["Error"] ?? TempData["ErrorMessage"])
    </div>
}
<div class="row mb-3">
    <div class="col-2 col-sm-2">
        @await Component.InvokeAsync("MachineCategories")
    </div>
    <div class="col-4 col-sm-4">
        <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search">
    </div>
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Requestor</th>
            <th>Part Name</th>
            <th>Quantity</th>
            <th>CRD</th>
            <th>Status</th>
            <th>RequestedAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data Requeast.</td>
            </tr>
        }
        else
        {
            foreach (var rq in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@rq.Users?.Name</td>
                    <td>@rq.ItemRequest?.PartName</td>
                    <td>@rq.QuantityReq</td>
                    <td>@rq.CRD</td>
                    <td>@rq.Status</td>
                    <td>@rq.CreatedAt</td>
                    <td class="text-center">

                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#fabrikasiModal-@rq.Id">
                            Fabrikasi
                        </button>
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalDetail-@rq.Id">
                            Detail
                        </button>
                    </td>

                </tr>
                index++;
            }
        }
    </tbody>
</table>