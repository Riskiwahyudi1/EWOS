@model EWOS_MVC.Models.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}

<h5 class="my-3">List User</h5>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex align-items-center mb-3 gap-2">
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 300px;">
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>User Name</th>
            <th>Name</th>
            <th>Badge</th>
            <th>Email</th>
            <th>Status</th>
            <th>Join Date</th>
            <th>Updated At</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Users.Any())
        {
            <tr>
                <td colspan="9" class="text-center text-muted">Tidak ada data user.</td>
            </tr>
        }
        else
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@user.UserName</td>
                    <td>@user.Name</td>
                    <td>@user.Badge</td>
                    <td>@user.Email</td>
                    <td>@(user.IsActive ? "Aktif" : "Nonaktif")</td>
                    <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@user.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm open-modal"
                                data-url="/AdminSystem/UserList/LoadData?Id=@user.Id&amp;type=Edit">
                            Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>


<script src="~/js/AdminSystem/userList.js" defer></script>
