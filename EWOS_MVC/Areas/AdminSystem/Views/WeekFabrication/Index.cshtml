﻿@using EWOS_MVC.Services
@model PaginatedHelper<EWOS_MVC.Models.WeeksSettingModel>

@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}
@{
    ViewData["Title"] = "Weeks Fabrication";
}
<h5 class="mb-2">Weeks Fabrication</h5>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="d-flex align-items-center gap-2">
    <div class="col-2 col-sm-2">
        @await Component.InvokeAsync("YearsSetting")
    </div>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>

<button id="btn-generate-week"
        type="button"
        class="btn btn-success my-4"
        data-bs-toggle="modal"
        data-bs-target="#modalConfirmGenerate"
        @(Model != null && Model.Any() ? "disabled" : "")>
    ➕ Generate Week
</button>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Week No</th>
            <th>Work Days</th>
            <th>Week Start</th>
            <th>Week End</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = (Model?.PageIndex - 1) * ViewBag.PageSize + 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var week in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>Week @week.Week</td>
                    <td>@week.WorkingDays</td>
                    <td>@week.StartDate</td>
                    <td>@week.EndDate</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm open-modal"
                                data-url="/AdminSystem/WeekFabrication/LoadData?Id=@week.Id&type=Edit">
                            Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>


<!-- Modal Konfirmasi + Form -->
<div class="modal fade" id="modalConfirmGenerate" tabindex="-1" aria-labelledby="modalConfirmGenerateLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form id="formGenerateWeek" method="post" action="/AdminSystem/WeekFabrication/GenerateWeek">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmGenerateLabel">Konfirmasi Generate Week</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    Apakah Anda yakin ingin melakukan proses <strong>Generate Week</strong>?

                    <br><br>
                    @{
                        var yearId = ViewBag.YearId;

                    }
                    <!-- Field model (contoh) -->
                    <input type="hidden" name="YearSettingId" id="YearSettingId" value="@yearId" />

                    <div class="alert alert-danger mt-3">
                        <b>Proses ini hanya dapat dilakukan sekali untuk setiap tahun.</b><br />
                        <p>Pastikan tanggal mulai week pertama tahun ini sudah sesuai pada menu <b>Year Setting</b> !! </p>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Batal</button>

                    <button type="submit" class="btn btn-primary" id="confirmGenerateBtn">
                        Ya, Generate
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- Pagination Razor (default) -->
<div id="pagination-server">
    @if (Model?.TotalPages > 1)
    {
        int maxPagesToShow = 5;
        int startPage = Model.PageIndex - 2;
        int endPage = Model.PageIndex + 2;

        // Koreksi awal jika startPage < 1
        if (startPage < 1)
        {
            endPage += (1 - startPage);
            startPage = 1;
        }

        // Koreksi akhir jika endPage > TotalPages
        if (endPage > Model.TotalPages)
        {
            startPage -= (endPage - Model.TotalPages);
            endPage = Model.TotalPages;
        }

        // Pastikan jumlah tombol maksimum 5
        if (endPage - startPage + 1 > maxPagesToShow)
        {
            endPage = startPage + maxPagesToShow - 1;
        }
        if (startPage < 1)
        {
            startPage = 1;
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <!-- Previous -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex - 1)">Previous</a>
                </li>

                <!-- Jika page di awal -> tampil "1" lalu ... -->
                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }

                <!-- Page number utama -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                <!-- Jika page di akhir -> tampil ... lalu lastPage -->
                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                        <a class="page-link" href="?page=@Model.TotalPages">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Model.PageIndex + 1)">Next</a>
                </li>

            </ul>
        </nav>
    }
</div>
<!-- Pagination JS (hidden default) -->
<div id="pagination-client" style="display:none;">
    <nav>
        <ul class="pagination justify-content-end" id="pagination-js"></ul>
    </nav>
</div>


<script src="~/js/AdminSystem/weekFabrication.js" defer></script>