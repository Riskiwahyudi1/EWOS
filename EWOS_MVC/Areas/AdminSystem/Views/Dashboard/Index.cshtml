@{
    ViewData["Title"] = "Dashboard";
}

@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}

<h5 class="my-3">Dashboard Admin</h5>

<style>
    .card-soft {
        color: #333;
        border: none;
        border-radius: 10px;
    }

    .bg-soft-blue {
        background-color: #a8d0e6;
    }

    .bg-soft-green {
        background-color: #b8e0d2;
    }

    .bg-soft-yellow {
        background-color: #fff3b0;
    }

    .bg-soft-red {
        background-color: #f7a399;
    }

    .bg-soft-purple {
        background-color: #d6c1e9;
    }

    .bg-soft-grey {
        background-color: #e0e0e0;
    }

    .bg-no-7 {
        background-color: #FBE9E7;
    }

    .bg-no-8 {
