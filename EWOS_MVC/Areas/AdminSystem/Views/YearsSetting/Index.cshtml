@model List<EWOS_MVC.Models.YearsSettingModel>
@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}
@{
    ViewData["Title"] = "Setting Tahun";
}
<h5 class="my-3">Halaman Setting Tahun</h5>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Alert"] != null)
{
    <div class="alert alert-warning">@TempData["Alert"]</div>
}

<div class="d-flex align-items-center mb-3 gap-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah">
        ➕ Tambah
    </button>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Year</th>
            <th>Elecrical Cost</th>
            <th>Start Date</th>
            <th>CreatedAt</th>
            <th>UpdateAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var y in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@y.Year</td>
                    <td>@y.ElectricalCost</td>
                    <td>@y.StartDate</td>
                    <td>@y.CreatedAt</td>
                    <td>@y.UpdatedAt</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit-@y.Id">
                            ✏️ Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>


<!-- Modal tambah -->
<div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="modalTambahLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/AdminSystem/YearsSetting/Create">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahLabel">Tambah Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>

                <div class="modal-body">
                    <div class="form-group mb-2">
                        <label asp-for="Year">Year</label>
                        <select id="yearSelect" name="Year" class="form-control" required></select>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input name="StartDate" type="date" class="form-control" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ElectricalCost" class="form-label">Elecrical Cost</label>
                        <input name="ElectricalCost" class="form-control" type="number" step="0.00001" placeholder="0,00" value="" />
                        <span asp-validation-for="ElectricalCost" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
@if (Model != null && Model.Any())
{
    @foreach (var y in Model)
    {
        <!-- Modal Edit -->
        <div class="modal fade" id="modalEdit-@y.Id" tabindex="-1" aria-labelledby="modalEditLabel-@y.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" action="/AdminSystem/YearsSetting/Edit">
                        @Html.AntiForgeryToken()

                        <div class="modal-header">
                            <h5 class="modal-title" id="modalEditLabel-@y.Id">Edit Data</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                        </div>

                        <div class="modal-body">
                            <input type="hidden" name="Id" value="@y.Id" />

                            <div class="form-group mb-2">
                                <label asp-for="Year">Year</label>
                                <input value="@y.Year" class="form-control" readonly />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="StartDate">Start Day</label>
                                <input name="StartDate" type="date" class="form-control" value="@y.StartDate.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="ElectricalCost" class="form-label">Elecrical Cost</label>
                                <input name="ElectricalCost" class="form-control" type="number" step="0.00001" placeholder="0,00" value="@y.ElectricalCost" />
                                <span asp-validation-for="ElectricalCost" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
<script>
    document.addEventListener('DOMContentLoaded', () => {
      const tableBody = document.querySelector('table.table tbody');
      const searchBox = document.getElementById('searchBox');

      if (!tableBody || !searchBox) return;

      const initialHTML = tableBody.innerHTML;

      let debounceTimer = null;

      searchBox.addEventListener('input', function () {
        const keyword = this.value.trim();

        // Jika kosong kembalikan tampilan awal
        if (keyword.length === 0) {
          tableBody.innerHTML = initialHTML;
          return;
        }

        // Debounce (tunggu 350ms )
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(async () => {
          try {
            const res = await fetch(`/AdminSystem/YearsSetting/Search?keyword=${encodeURIComponent(keyword)}`);
            if (!res.ok) throw new Error('Network response was not ok');

            const data = await res.json();

            if (!Array.isArray(data) || data.length === 0) {
              tableBody.innerHTML = `
                    <tr>
                         <td colspan="9" class="text-center text-muted">Tidak ada data Year.</td>
                    </tr>`;
              return;
            }

                let html = '';
                data.forEach((y, idx) => {
                  const id = y.id ?? '';
                  const year = y.year ?? '';
                  const startDate = y.startDate ?? '';
                  const createdAt = y.createdAt ?? '';
                  const updatedAt = y.updatedAt ?? '';

                  html += `
                    <tr>
                        <td class="text-center">${idx + 1}</td>
                        <td>${year}</td>
                        <td>${startDate}</td>
                        <td>${createdAt}</td>
                        <td>${updatedAt}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit-${id}">✏️ Edit</button>
                        </td>
                    </tr>`;
                });

                tableBody.innerHTML = html;

          } catch (err) {
            console.error('Search error:', err);
            tableBody.innerHTML = `<tr><td colspan="9" class="text-center text-muted">Terjadi kesalahan saat mencari.</td></tr>`;
          }
        }, 350);
      });
    });
</script>

@* generate tahun *@
<script>
    // Tahun awal
    const startYear = 2024;
    // Tahun akhir = tahun sekarang
    const endYear = new Date().getFullYear();
    const yearSelect = document.getElementById('yearSelect');

     for (let year = endYear; year >= startYear; year--) {
        let option = document.createElement('option');
        option.value = year;
        option.textContent = year;
        yearSelect.appendChild(option);
    }

    yearSelect.value = endYear;
</script>