@model List<EWOS_MVC.Models.YearsSettingModel>
@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}
@{
    ViewData["Title"] = "Years Fabrication";
}
<h5 class="my-3">Halaman Setting Tahun</h5>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Alert"] != null)
{
    <div class="alert alert-warning">@TempData["Alert"]</div>
}

<div class="d-flex align-items-center mb-3 gap-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah">
        ➕ Tambah
    </button>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Year</th>
            <th>Elecrical Cost</th>
            <th>Start Date</th>
            <th>CreatedAt</th>
            <th>UpdateAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var y in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@y.Year</td>
                    <td>@y.ElectricalCost</td>
                    <td>@y.StartDate</td>
                    <td>@y.CreatedAt</td>
                    <td>@y.UpdatedAt</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm open-modal"
                                data-url="/AdminSystem/YearsSetting/LoadData?Id=@y.Id&amp;type=Edit">
                            Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<!-- Modal tambah -->
<div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="modalTambahLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/AdminSystem/YearsSetting/Create">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahLabel">Tambah Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>

                <div class="modal-body">
                    <div class="form-group mb-2">
                        <label asp-for="Year">Year</label>
                        <select id="yearSelect" name="Year" class="form-control" required></select>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input name="StartDate" type="date" class="form-control" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ElectricalCost" class="form-label">Elecrical Cost</label>
                        <input name="ElectricalCost" class="form-control" type="number" step="0.00001" placeholder="0,00" value="" />
                        <span asp-validation-for="ElectricalCost" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/AdminSystem/yearFabrication.js" defer></script>
