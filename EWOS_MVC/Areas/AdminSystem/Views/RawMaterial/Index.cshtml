
@{
    ViewData["Title"] = "Raw Material";
}
@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}

<h5 class="my-3">Raw Material List</h5>

<div class="d-flex align-items-center mb-3 gap-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah">
        Tambah
    </button>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>


<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>SAP ID</th>
            <th>Name</th>
            <th>Machine Category</th>
            <th>Price</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="12" class="text-center text-muted">Tidak ada data Raw Material.</td>
            </tr>
        }
        else
        {
            foreach (var rm in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@rm.SapId</td>
                    <td>@rm.Name</td>
                    <td>@rm.MachineCategories?.CategoryName</td>
                    <td>@rm.Stock</td>
                    <td>@rm.Price</td>
                    <td>@rm.CreatedAt</td>
                    <td>@rm.UpdatedAt</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit-@rm.Id">
                            ✏️ Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>


<!-- Modal tambah -->
<div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="modalTambahLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/AdminSystem/RawMaterial/Create">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahLabel">Tambah Raw Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="SapId">SAP ID</label>
                        <input name="SapId" class="form-control" type="number" required />
                        <span asp-validation-for="SapId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Name">Name</label>
                        <input name="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    @* <div class="form-group mt-2">
                        <label asp-for="MachineCategoryId">Machine Categories</label>
                        @await Component.InvokeAsync("MachineCategories")
                        <span asp-validation-for="MachineCategoryId" class="text-danger"></span>
                    </div> *@
                   

                    <div class="form-group mt-2">
                        <label asp-for="Price">Price</label>
                        <input name="Price" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>