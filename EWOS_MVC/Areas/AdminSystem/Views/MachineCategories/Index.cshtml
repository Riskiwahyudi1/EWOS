@model List<EWOS_MVC.Models.MachineCategoriesModel>
@{
    ViewData["Title"] = "Machine Categories";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5 class="my-3"> List Kategori Mesin</h5>
@if (TempData["PostCheck"] != null)
{
    <div class="alert alert-success">
        @TempData["PostCheck"]
    </div>
}
<div class="d-flex align-items-center mb-3 gap-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah">
        ➕ Tambah
    </button>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Category Name</th>
            <th>CreatedAt</th>
            <th>UpdateAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        <div id="loadingText" style="display:none; text-align:center; margin-bottom:10px; font-weight:bold; color:#555;">
            Memuat...
        </div>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var category in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CreatedAt</td>
                    <td>@category.UpdatedAt</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit-@category.Id">
                            ✏️ Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>


<!-- Modal tambah -->
<div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="modalTambahLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/AdminSystem/MachineCategories/Create">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahLabel">Tambah Raw Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CategoryName">Category Name</label>
                        <input name="CategoryName" class="form-control" required />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@foreach (var category in Model)
{
    <!-- Modal Edit -->
    <div class="modal fade" id="modalEdit-@category.Id" tabindex="-1" aria-labelledby="modalEditLabel-@category.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/AdminSystem/MachineCategories/Edit">
                    @Html.AntiForgeryToken()

                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEditLabel-@category.Id">Edit Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" name="Id" value="@category.Id" />

                        <div class="form-group">
                            <label asp-for="CategoryName">Category Name</label>
                            <input name="CategoryName" class="form-control" value="@category.CategoryName" required />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
<script>
    document.addEventListener('DOMContentLoaded', () => {
      const tableBody = document.querySelector('table.table tbody');
      const searchBox = document.getElementById('searchBox');
      const loadingText = document.getElementById('loadingText');

      if (!tableBody || !searchBox) return;

      const initialHTML = tableBody.innerHTML;

      let debounceTimer = null;

      searchBox.addEventListener('input', function () {
        const keyword = this.value.trim();

        // Jika kosong kembalikan tampilan awal
        if (keyword.length === 0) {
          tableBody.innerHTML = initialHTML;
          return;
        }

        // Debounce (tunggu 350ms )
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(async () => {
          try {

             loadingTimer = setTimeout(() => {
                    loadingText.style.display = 'block';
                }, 500);

            const res = await fetch(`/AdminSystem/MachineCategories/Search?keyword=${encodeURIComponent(keyword)}`);
            if (!res.ok) throw new Error('Network response was not ok');

            const data = await res.json();

             clearTimeout(loadingTimer);
             loadingText.style.display = 'none';

            if (!Array.isArray(data) || data.length === 0) {
              tableBody.innerHTML = `
                    <tr>
                         <td colspan="9" class="text-center text-muted">Tidak ada data Machine categori.</td>
                    </tr>`;
              return;
            }

                let html = '';
                data.forEach((m, idx) => {
                  const id = m.id ?? '';
                  const machineName = m.categoryName ?? '';
                  const createdAt = m.createdAt ?? '';
                  const updatedAt = m.updatedAt ?? '';

                  html += `
                    <tr>
                        <td class="text-center">${idx + 1}</td>
                        <td>${machineName}</td>
                        <td>${createdAt}</td>
                        <td>${updatedAt}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit-${id}">✏️ Edit</button>
                        </td>
                    </tr>`;
                });

                tableBody.innerHTML = html;

          } catch (err) {
            console.error('Search error:', err);
            tableBody.innerHTML = `<tr><td colspan="9" class="text-center text-muted">Terjadi kesalahan saat mencari.</td></tr>`;
          }
        }, 350);
      });
    });
</script>