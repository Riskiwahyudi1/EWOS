@model List<EWOS_MVC.Models.MachineCategoriesModel>
@{
    ViewData["Title"] = "Machine Categories";
}
@{
    Layout = "~/Views/Shared/_LayoutAdminSystem.cshtml";
}
<h5 class="my-3"> List Kategori Mesin</h5>
@if (TempData["PostCheck"] != null)
{
    <div class="alert alert-success">
        @TempData["PostCheck"]
    </div>
}
<div class="d-flex align-items-center mb-3 gap-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah">
        ➕ Tambah
    </button>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 250px;">
</div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>Category Name</th>
            <th>CreatedAt</th>
            <th>UpdateAt</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
    
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var category in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CreatedAt</td>
                    <td>@category.UpdatedAt</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm open-modal"
                                data-url="/AdminSystem/MachineCategories/LoadData?Id=@category.Id&amp;type=Edit">
                            Edit
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>


<!-- Modal tambah -->
<div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="modalTambahLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/AdminSystem/MachineCategories/Create">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="modalTambahLabel">Tambah Raw Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CategoryName">Category Name</label>
                        <input name="CategoryName" class="form-control" required />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/AdminSystem/machineCategory.js" defer></script>