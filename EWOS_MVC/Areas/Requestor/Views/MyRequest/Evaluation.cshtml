﻿@using EWOS_MVC.Services
@model PaginatedHelper<EWOS_MVC.Models.ItemRequestModel>
@{
    ViewData["Title"] = "My Request";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="">Riwayat Request</h5>

<div class="d-flex align-items-center mb-3 gap-2">
    <div class="col-2 col-sm-2">
        @await Component.InvokeAsync("MachineCategories")
    </div>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 300px;">
</div>

@{
    var summary = ViewBag.StatusSummaryEval as Dictionary<string, int>;
    int GetCount(string status) => summary != null && summary.ContainsKey(status) ? summary[status] : 0;
}

<ul class="nav nav-tabs justify-content-center" id="statusTabs" role="tablist">

   
    <li class="nav-item" role="presentation">
        @{
            int waitingAppCount = GetCount("WaitingApproval") + GetCount("FabricationApproval");
        }
        <button class="nav-link active"
                id="waitingapproval-tab"
                data-bs-toggle="tab"
                data-bs-target="#waitingapproval"
                data-status="WaitingApproval,FabricationApproval"
                type="button"
                role="tab">
            Waiting Approval
            @if (waitingAppCount > 0)
            {
                <span class="badge bg-danger rounded-pill">@waitingAppCount</span>
            }
        </button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="waitingfabrication-tab"
                data-bs-toggle="tab"
                data-bs-target="#waitingfabrication"
                data-status="WaitingFabrication"
                type="button"
                role="tab">
            Waiting Fabrication
            @if (GetCount("WaitingFabrication") > 0)
            {
                <span class="badge bg-danger rounded-pill">@GetCount("WaitingFabrication")</span>
            }
        </button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="onfabrication-tab"
                data-bs-toggle="tab"
                data-bs-target="#onfabrication"
                data-status="InFabrication"
                type="button"
                role="tab">
            In Fabrication
            @if (GetCount("InFabrication") > 0)
            {
                <span class="badge bg-danger rounded-pill">@GetCount("InFabrication")</span>
            }
        </button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="WaitingBuyoff-tab"
                data-bs-toggle="tab"
                data-bs-target="#WaitingBuyoff"
                data-status="WaitingBuyoff"
                type="button"
                role="tab">
            Waiting Buyoff
            @if (GetCount("WaitingBuyoff") > 0)
            {
                <span class="badge bg-danger rounded-pill">@GetCount("WaitingBuyoff")</span>
            }
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link "
                id="history-tab"
                data-bs-toggle="tab"
                data-bs-target="#history"
                data-status="Maspro,Fail"
                type="button"
                role="tab">
            Finish
            @{
                int historyCount = GetCount("Maspro") + GetCount("Fail");
            }
            @if (historyCount > 0)
            {
                <span class="badge bg-danger rounded-pill">@historyCount</span>
            }
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="reject-tab"
                data-bs-toggle="tab"
                data-bs-target="#reject"
                data-status="Reject"
                type="button"
                role="tab">
            Reject
            @if (GetCount("Reject") > 0)
            {
                <span class="badge bg-danger rounded-pill">@GetCount("Reject")</span>
            }
        </button>
    </li>

</ul>

<table class="table table-sm mt-3 table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>ID Request</th>
            <th style="width : 400px;">Item Name</th>
            <th >Quantity</th>
            <th>Category</th>
            <th>Request Date</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = (Model.PageIndex - 1) * ViewBag.PageSize + 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="12" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var ir in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@ir.Id</td>
                    <td style=" max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; ">@ir.PartName</td>
                    <td>1 @ir.Unit</td>
                    <td>@ir.MachineCategories?.CategoryName</td>
                    <td>@ir.CreatedAt</td>
                    <td class="text-center">
                        <div class="dropstart d-inline-block">
                            <button class="btn btn-info btn-sm dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown">
                                Actions
                            </button>

                            <ul class="dropdown-menu p-2" style="min-width:170px">

                                @* === WaitingBuyoff: Pass / Fail *@
                                @if (ir.Status == "WaitingBuyoff")
                                {
                                    <li>
                                        <button class="btn btn-success btn-sm w-100 text-center open-modal"
                                                data-url="/Requestor/MyRequest/LoadData?id=@ir.Id&type=Pass">
                                            <i class="bi bi-check"></i> Pass
                                        </button>
                                    </li>

                                    <li class="mt-1">
                                        <button class="btn btn-danger btn-sm w-100 text-center open-modal"
                                                data-url="/Requestor/MyRequest/LoadData?id=@ir.Id&type=Fail">
                                            <i class="bi bi-x-lg"></i> Fail
                                        </button>
                                    </li>
                                }
                                @* === Other Status: Progress *@
                                else if (ir.Status == "WaitingBuyoff" || ir.Status == "Maspro" || ir.Status == "Fail")
                                {
                                    <li>
                                        <button class="btn btn-secondary btn-sm w-100 text-center open-modal"
                                                data-url="/RequestHistory/LoadDataFab?Id=@ir.Id&type=Status">
                                            Progress
                                        </button>
                                    </li>
                                }

                                <li class="mt-1">
                                    <button class="btn btn-warning btn-sm w-100 text-center open-modal"
                                            data-url="/Requestor/MyRequest/LoadData?id=@ir.Id&type=Detail">
                                        <i class="bi bi-info-circle"></i> Detail
                                    </button>
                                </li>

                                <li class="mt-1">
                                    <button class="btn btn-info btn-sm w-100 text-center open-modal"
                                            data-url="/Requestor/MyRequest/LoadData?id=@ir.Id&type=Status">
                                        <i class="bi bi-ticket-detailed"></i> Status
                                    </button>
                                </li>

                            </ul>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }

    </tbody>
</table>

<!-- Pagination Razor (default) -->
<div id="pagination-server">
    @if (Model?.TotalPages > 1)
    {
        int maxPagesToShow = 5;
        int startPage = Model.PageIndex - 2;
        int endPage = Model.PageIndex + 2;

        // Koreksi awal jika startPage < 1
        if (startPage < 1)
        {
            endPage += (1 - startPage);
            startPage = 1;
        }

        // Koreksi akhir jika endPage > TotalPages
        if (endPage > Model.TotalPages)
        {
            startPage -= (endPage - Model.TotalPages);
            endPage = Model.TotalPages;
        }

        // Pastikan jumlah tombol maksimum 5
        if (endPage - startPage + 1 > maxPagesToShow)
        {
            endPage = startPage + maxPagesToShow - 1;
        }
        if (startPage < 1)
        {
            startPage = 1;
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <!-- Previous -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex - 1)">Previous</a>
                </li>

                <!-- Jika page di awal -> tampil "1" lalu ... -->
                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }

                <!-- Page number utama -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                <!-- Jika page di akhir -> tampil ... lalu lastPage -->
                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                        <a class="page-link" href="?page=@Model.TotalPages">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Model.PageIndex + 1)">Next</a>
                </li>

            </ul>
        </nav>
    }
</div>
<!-- Pagination JS (hidden default) -->
<div id="pagination-client" style="display:none;">
    <nav>
        <ul class="pagination justify-content-end" id="pagination-js"></ul>
    </nav>
</div>
<script src="~/js/Requestor/myRequestEval.js" defer></script>