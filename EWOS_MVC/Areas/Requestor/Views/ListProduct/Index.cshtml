﻿@using EWOS_MVC.Services
@model PaginatedHelper<EWOS_MVC.Models.ItemRequestModel>
@{
    ViewData["Title"] = "Dashboard";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="my-3">List Item Inhouse Fabriaction</h5>

<div class="d-flex align-items-center mb-3 gap-2">
    <div class="col-2 col-sm-2">
        @await Component.InvokeAsync("MachineCategories")
    </div>
    <input type="text" id="searchBox" class="form-control" placeholder="Search..." aria-label="Search" style="max-width: 300px;">
</div>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger py-2">@TempData["Error"]</div>
}
<ul class="nav nav-tabs justify-content-center" id="statusTabs" role="tablist">
    <li class="nav-item" role="presentation">

        <button class="nav-link active"
                id="maspro-tab"
                data-bs-toggle="tab"
                data-status="Maspro"
                type="button"
                role="tab">
            Maspro

        </button>
    </li>
    <li class="nav-item" role="presentation">

        <button class="nav-link"
                id="!maspro-tab"
                data-bs-toggle="tab"
                data-status="WaitingApproval,FabricationApproval,WaitingFabrication,InFabrication,WaitingBuyoff,Fail"
                type="button"
                role="tab">
            Evalution

        </button>
    </li>
</ul>

<table class="table table-sm table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th class="text-center">No</th>
            <th>ID Request</th>
            <th>Requestor</th>
            <th>Item Name</th>
            <th>Machine Category</th>
            <th>Request Date</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="12" class="text-center text-muted">Tidak ada data.</td>
            </tr>
        }
        else
        {
            foreach (var rm in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@rm.Id</td>
                    <td>@rm.Users.Name</td>
                    <td>@rm.PartName</td>
                    <td>@rm.MachineCategories?.CategoryName</td>
                    <td>@rm.CreatedAt</td>
                    <td class="text-center">
                        @{
                            var roles = (ViewBag.Roles as List<string>) ?? new List<string>();
                            bool canEdit = roles.Contains("AdminFabrication") || roles.Contains("EngineerFabrication") || roles.Contains("AdminSystem");
                        }

                        <script>
                            window.canEdit = @canEdit.ToString().ToLower();
                        </script>

                        <!-- Request -->
                        <button class="btn btn-success btn-sm open-modal"
                                data-url="/Requestor/ListProduct/LoadData?Id=@rm.Id&amp;type=Request">
                            Request
                        </button>

                        <!-- Edit (hanya AdminFabrication atau EngineerFabrication) -->
                        @if (canEdit)
                        {
                            <button class="btn btn-warning btn-sm open-modal"
                                    data-url="/Requestor/ListProduct/LoadData?Id=@rm.Id&type=Edit">
                                Edit
                            </button>
                        }

                        <!-- Detail -->
                        <button class="btn btn-secondary btn-sm open-modal"
                                data-url="/Requestor/ListProduct/LoadData?Id=@rm.Id&amp;type=Detail">
                            Detail
                        </button>

                        <!-- Status -->
                        <button class="btn btn-info btn-sm open-modal"
                                data-url="/Requestor/ListProduct/LoadData?Id=@rm.Id&amp;type=Status">
                            Status
                        </button>

                    </td>


                </tr>
                index++;
            }
        }


    </tbody>
</table>

<!-- Pagination Razor (default) -->
<div id="pagination-server">
    @if (Model.TotalPages > 1)
    {
        int maxPagesToShow = 3;
        int startPage = Model.PageIndex - 2;
        int endPage = Model.PageIndex + 2;

        // Koreksi awal jika startPage < 1
        if (startPage < 1)
        {
            endPage += (1 - startPage);
            startPage = 1;
        }

        // Koreksi akhir jika endPage > TotalPages
        if (endPage > Model.TotalPages)
        {
            startPage -= (endPage - Model.TotalPages);
            endPage = Model.TotalPages;
        }

        // Pastikan jumlah tombol maksimum 5
        if (endPage - startPage + 1 > maxPagesToShow)
        {
            endPage = startPage + maxPagesToShow - 1;
        }
        if (startPage < 1)
        {
            startPage = 1;
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">

                <!-- Previous -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex - 1)">Previous</a>
                </li>

                <!-- Jika page di awal -> tampil "1" lalu ... -->
                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }

                <!-- Page number utama -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                <!-- Jika page di akhir -> tampil ... lalu lastPage -->
                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="?page=@(Model.PageIndex + 1)">Next</a>
                </li>

            </ul>
        </nav>
    }
</div>

<!-- Pagination JS (hidden default) -->
<div id="pagination-client" style="display:none;">
    <nav>
        <ul class="pagination justify-content-end" id="pagination-js"></ul>
    </nav>
</div>
<input type="hidden" id="currentStatus" value="@ViewBag.CurrentStatus" />


<script src="~/js/Requestor/listProduct.js" defer></script>